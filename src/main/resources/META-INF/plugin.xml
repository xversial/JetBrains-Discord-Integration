<idea-plugin>
    <id>com.almightyalpaca.intellij.plugins.discord</id>
    <idea-version since-build="145"/>
    <name>Discord Integration</name>
    <vendor url="https://github.com/Almighty-Alpaca">Almighty Alpaca</vendor>

    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <projectConfigurable groupId="tools" groupWeight="150" displayName="Discord" id="discord"
                             instance="com.almightyalpaca.jetbrains.plugins.discord.settings.ProjectConfigurable"/>
        <projectService serviceImplementation="com.almightyalpaca.jetbrains.plugins.discord.settings.ProjectConfigurable"/>
        <applicationService serviceImplementation="com.almightyalpaca.jetbrains.plugins.discord.settings.ApplicationSettings"/>
        <projectService serviceImplementation="com.almightyalpaca.jetbrains.plugins.discord.settings.ProjectSettings"/>
    </extensions>

    <application-components>
        <component>
            <implementation-class>
                com.almightyalpaca.jetbrains.plugins.discord.components.ApplicationComponent
            </implementation-class>
        </component>
    </application-components>

    <project-components>
        <component>
            <implementation-class>
                com.almightyalpaca.jetbrains.plugins.discord.components.ProjectComponent
            </implementation-class>
        </component>
    </project-components>

    <actions>
        <action id="ToolsMenuDisableAnActionSeparator" class="com.intellij.openapi.actionSystem.Separator">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
        <action id="ToolsMenuDisable" class="com.almightyalpaca.jetbrains.plugins.discord.actions.ToolsMenuDisableAnAction">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
